<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/market_parent_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="16dp"
android:clickable="true"
android:background="@android:color/white"
android:elevation="4dp"
android:layout_margin="8dp"
android:clipToPadding="false">

<ImageView
    android:id="@+id/market_product_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/ic_launcher"
    android:scaleType="centerCrop"
    android:background="@android:color/darker_gray"
    android:layout_gravity="center_vertical" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/market_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#212121"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/market_product_price"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="￥商品价格"
        android:textSize="16sp"
        android:textColor="#FF5722"
        android:maxLines="1"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/market_product_salecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="在售数量"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- 使用 Space 控件填充剩余空间 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/market_product_seller"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="卖家名称"
            android:textSize="14sp"
            android:textColor="#757575"
            android:maxLines="1" />

    </LinearLayout>
</LinearLayout>

</LinearLayout>